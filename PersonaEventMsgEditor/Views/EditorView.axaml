<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PersonaEventMsgEditor.ViewModels"
			 xmlns:views="using:PersonaEventMsgEditor.Views"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PersonaEventMsgEditor.Views.EditorView"
			 x:DataType="vm:EventViewModel">

	<UniformGrid>
		
		<!--Preview Window-->
		<DockPanel Grid.Column="0">
			<views:PreviewView DataContext="{Binding Messages[0]}"/>
		</DockPanel>


		<!--Meessage Editor-->
		<Border Background="Gray" CornerRadius="20" Margin="40"
				 Grid.Column="1">
			<StackPanel>
				<Label Content="{Binding Name}" FontWeight="Bold" FontSize="18" Margin="20 0 0 0"/>
				<ItemsControl ItemsSource="{Binding Messages}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<views:DialogEditorView Margin="20 0 20 0"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>	
				</ItemsControl>
			</StackPanel>
		</Border>
	</UniformGrid>

</UserControl>
